# Generated by Puppet
# /etc/dhcpd.conf

option domain-name <%= @domain_name %>;
option domain-name-servers <%= @dns_servers %>;
option subnet-mask <%= @subnet %>;
option routers <%= @router %>;
option time-offset <%= @time_offset %>;

subnet <%= @network %> netmask <%= @subnet %> {
  range <%= @range %>;
  <%- @nodes.each do |node| -%>

  host <%= node['host'] %> {
    option host-name "<%= node['host'] %>.<%= @domain_name %>";
    hardware ethernet <%= node['mac'] %>;
    fixed-address <%= node['ip'] %>;
  }
  <%- end -%>
}
